<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/color_button_normal"
                android:endColor="@color/color_button_grey_pressed"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/colorLightGrey" />
            <corners
                android:radius="90dp" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/color_button_grey_enabled"
                android:endColor="@color/color_button_normal"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorLightGrey" />
            <corners
                android:radius="90dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="@color/color_button_grey_disabled"
                android:endColor="@color/color_button_grey_disabled"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorLightGrey" />
            <corners
                android:radius="90dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/color_button_normal"
                android:endColor="@color/color_button_grey_enabled"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorLightGrey" />
            <corners
                android:radius="90dp" />
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
</selector>