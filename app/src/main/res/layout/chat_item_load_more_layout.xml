<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/main_contrast_transparent_bubble"
    android:gravity="center"
    android:orientation="horizontal"
    android:tag="system">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ico_reload" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/chat_item_text_view_system_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="5sp"
        android:maxLines="1"
        android:text="@string/chats_load_previous_messages_title"
        android:textColor="@color/mainContrast"
        android:textSize="16sp" />
</LinearLayout>
