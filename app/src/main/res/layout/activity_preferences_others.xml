<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_preferences_others"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:styledBackground="main"
    tools:context=".activity.preferences.PreferencesOthersActivity">

    <include layout="@layout/toolbar_default" />

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/Divider"
        app:styledBackground="mainContrast50" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/preferences_others_header_screenshots"
                style="@style/FontSettingsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/preferences_text_margin_start"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/settings_appearance_screenshots"
                app:styledTextColor="mainContrast" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/preferences_others_switch_screenshot"
                style="@style/FontSettingsElement"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preferences_item_height"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="@dimen/preferences_text_margin_start"
                android:paddingEnd="@dimen/preferences_text_margin_start"
                android:text="@string/settings_appearance_allow_screenshots"
                android:theme="@style/SwitchStyle"
                app:styledTextColor="mainContrast" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/preferences_others_divider_screenshots"
                style="@style/Divider"
                app:styledBackground="mainContrast50" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/preferences_others_header_use_osm"
                style="@style/FontSettingsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/preferences_text_margin_start"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/settings_others_use_osm_title"
                app:styledTextColor="mainContrast" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/preferences_others_switch_use_osm"
                style="@style/FontSettingsElement"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preferences_item_height"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="@dimen/preferences_text_margin_start"
                android:paddingEnd="@dimen/preferences_text_margin_start"
                android:text="@string/settings_others_use_osm_text"
                android:theme="@style/SwitchStyle"
                app:styledTextColor="mainContrast" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/preferences_others_divider_use_osm"
                style="@style/Divider"
                app:styledBackground="mainContrast50" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/preferences_others_header_use_polling"
                style="@style/FontSettingsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/preferences_text_margin_start"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/settings_others_use_polling_title"
                app:styledTextColor="mainContrast" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/preferences_others_switch_use_polling"
                style="@style/FontSettingsElement"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preferences_item_height"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="@dimen/preferences_text_margin_start"
                android:paddingEnd="@dimen/preferences_text_margin_start"
                android:text="@string/settings_others_use_polling_text"
                android:theme="@style/SwitchStyle"
                app:styledTextColor="mainContrast" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/preferences_others_divider_use_polling"
                style="@style/Divider"
                app:styledBackground="mainContrast50" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/preferences_others_header_use_ps"
                style="@style/FontSettingsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/preferences_text_margin_start"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/settings_others_use_ps_title"
                app:styledTextColor="mainContrast" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/preferences_others_switch_use_ps"
                style="@style/FontSettingsElement"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preferences_item_height"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="@dimen/preferences_text_margin_start"
                android:paddingEnd="@dimen/preferences_text_margin_start"
                android:text="@string/settings_others_use_ps_text"
                android:theme="@style/SwitchStyle"
                app:styledTextColor="mainContrast" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/preferences_others_divider_use_ps"
                style="@style/Divider"
                app:styledBackground="mainContrast50" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>