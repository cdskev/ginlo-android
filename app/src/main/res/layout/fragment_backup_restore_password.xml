<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:styledBackground="main">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/backup_restore_password_edit_text"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginEnd="@dimen/text_margin"
        android:layout_marginBottom="@dimen/text_margin"
        android:hint="@string/backup_restore_password_hint"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLines="1"
        android:textCursorDrawable="@null"
        app:styledTextColor="mainContrast" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backup_restore_password_btn"
        style="@style/BorderlessColoredButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onFragmentViewClick"
        android:text="@string/next"
        android:textColor="@color/actionSecondary"
        app:styledButtonType="borderless"
        app:styledTextColor="actionSecondary" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/backup_restore_password_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/text_margin"
        android:text="@string/backup_restore_select_caption"
        app:styledTextSize="labelTextSize"
        app:styledTextColor="mainContrast50" />

</LinearLayout>