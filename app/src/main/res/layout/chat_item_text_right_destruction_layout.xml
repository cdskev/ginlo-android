<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    android:gravity="end|center_vertical"
    android:orientation="vertical"
    android:padding="2dp"
    android:tag="selfdestruction_text_right">

    <include layout="@layout/chat_item_date_center" />

    <LinearLayout
        android:id="@+id/chat_item_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="end"
        android:minHeight="40dp"
        android:padding="0dp"
        android:tag="chat_item_selection_overlay">

        <LinearLayout
            style="@style/style_chat_item_info_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/chat_item_frame_layout_message_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="3dp"
                android:background="@drawable/message_status" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/chat_item_text_view_date"
                style="@style/CaptionTextViewStyleShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                tools:text="16:23" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chat_item_linear_layout_chat_bubble"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_weight="1"
            android:background="@drawable/chat_box_sender_background"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingEnd="24dp"
            android:paddingBottom="8dp">

            <androidx.emoji.widget.EmojiAppCompatTextView
                android:id="@+id/chat_item_text_view_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main"
                android:textSize="17sp"
                android:textStyle="normal"
                tools:text="tesggs hallo hallo hallo\n hallo h" />
        </LinearLayout>

        <View
            android:id="@+id/bubble_tail"
            android:layout_width="21dp"
            android:layout_height="14dp"
            android:layout_gravity="end|bottom"
            android:layout_marginStart="-1.5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/tail_sender"/>
    </LinearLayout>
</LinearLayout>
